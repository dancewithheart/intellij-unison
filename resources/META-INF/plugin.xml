<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "https://plugins.jetbrains.com/plugin.dtd">
<idea-plugin>
    <id>org.jetbrains.plugins.unison</id>
    <name>Unison</name>

    <version>0.0.2</version>
    <vendor>DanceWithHeart</vendor>

    <idea-version since-build="231.0"/>
    <idea-version since-build="251.0" until-build="260.0"/>

    <depends>com.intellij.modules.platform</depends>

    <description>Unison plugin for IntelliJ IDEA</description>
    <change-notes>
     <![CDATA[
       <ul>
        <li><b>0.0.1</b> Basic plumbing for IntelliJ plugin.</li>
        <li><b>0.0.2</b> Basic plumbing for lexer, parser and syntax highlighter.</li>
       </ul>
      ]]>
    </change-notes>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Unison File"
                implementationClass="intellij.unison.UnisonFileType"
                language="Unison"
                extensions="u"
        />
        <lang.parserDefinition
                language="Unison"
                implementationClass="intellij.unison.language.UnisonParserDefinition"/>
        <iconProvider implementation="intellij.unison.UnisonIcon" />
        <lang.syntaxHighlighterFactory
                language="Unison"
                implementationClass="intellij.unison.language.highlight.UnisonSyntaxHighlighterFactory" />
    </extensions>

</idea-plugin>
